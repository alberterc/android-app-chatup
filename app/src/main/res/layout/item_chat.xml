<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_picture"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginEnd="7dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
    />

    <RelativeLayout
        android:id="@+id/chat_text_container"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/chat_left"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:fontFamily="@font/almarai_regular"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />

            <TextView
                android:id="@+id/user_chat"
                android:fontFamily="@font/almarai_regular"
                android:text="User chat"
                android:textColor="#AABBC6"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/user_name"
                android:layout_marginTop="20dp"
            />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_right"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/checkmark"
                android:src="@drawable/ic_baseline_check_24"
                android:layout_alignTop="@id/time_received"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
            />

            <TextView
                android:id="@+id/time_received"
                android:text="00:00"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>